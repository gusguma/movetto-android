<resources>
    <!-- Base application theme. -->
    <style name="Theme.Movetto.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

    </style>
    <!-- FirebaseUI theme. -->
    <style name="Theme.Movetto.FirebaseUI" parent="FirebaseUI">
        <item name="android:buttonStyle">@style/FirebaseUI.Button</item>


    </style>

    <style name="Theme.Movetto.Main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Movetto.Main.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Movetto.Main.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
