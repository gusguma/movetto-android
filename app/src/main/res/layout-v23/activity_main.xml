<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_700"
    android:backgroundTint="@color/red_700"
    android:minWidth="375dp"
    android:minHeight="667dp"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/background_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/movetto"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/welcome_image" />

    <Button
        android:id="@+id/button_welcome"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_marginBottom="24dp"
        android:alpha="1"
        android:backgroundTint="@color/green_900"
        android:fontFamily="@font/kulim_park_bold"
        android:onClick="getEmailActivity"
        android:shadowColor="@android:color/black"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:text="@string/get_started"
        android:textSize="20sp"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logotipo_welcome"
        android:layout_width="118dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/text_welcome"
        android:layout_width="199dp"
        android:layout_height="84dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/button_welcome"
        app:layout_constraintEnd_toEndOf="@+id/background_welcome"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/background_welcome"
        app:layout_constraintTop_toBottomOf="@+id/logotipo_welcome"
        app:srcCompat="@drawable/welcome_text"
        android:contentDescription="@string/todo" />

</androidx.constraintlayout.widget.ConstraintLayout>