<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/service_available_action_cancel_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/kulim_park_bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/fui_cancel"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/service_available_action_number_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="XXXXXXXX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/service_available_action_number_label"
            app:layout_constraintTop_toBottomOf="@+id/service_available_action_type_edit" />

        <TextView
            android:id="@+id/service_available_action_action_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:focusedByDefault="true"
            android:text="XXXXXXXXX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/service_available_action_amount_edit"
            app:layout_constraintTop_toBottomOf="@+id/service_available_action_amount_edit" />

        <TextView
            android:id="@+id/service_available_action_amount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Importe:"
            app:layout_constraintBaseline_toBaselineOf="@+id/service_available_action_amount_edit"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/service_available_action_type_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Tipo de Servicio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/service_available_action_number_edit"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/service_available_action_confirm_button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/kulim_park_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="confirmar"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/service_available_action_cancel_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/service_available_action_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nº Servicio:"
            app:layout_constraintBaseline_toBaselineOf="@+id/service_available_action_number_edit"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/service_available_action_action_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Acción:"
            app:layout_constraintBaseline_toBaselineOf="@+id/service_available_action_action_edit"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/service_available_action_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tipo:"
            app:layout_constraintBaseline_toBaselineOf="@+id/service_available_action_type_edit"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/service_available_action_top_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/service_available_action_action_edit" />

        <EditText
            android:id="@+id/service_available_action_nif_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Introduce tu NIF / NIE"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/service_available_action_action_edit"
            app:layout_constraintTop_toBottomOf="@+id/service_available_action_top_divider" />

        <TextView
            android:id="@+id/service_available_action_nif_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="NIF / NIE:"
            app:layout_constraintBaseline_toBaselineOf="@+id/service_available_action_nif_edit"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/service_available_action_amount_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="XX.XX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/service_available_action_number_edit"
            app:layout_constraintTop_toBottomOf="@+id/service_available_action_number_edit" />

        <Spinner
            android:id="@+id/service_available_action_vehicle_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/service_available_action_nif_edit"
            app:layout_constraintTop_toBottomOf="@+id/service_available_action_nif_edit" />

        <TextView
            android:id="@+id/service_available_action_vehicle_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Vehiculo:"
            app:layout_constraintBottom_toBottomOf="@+id/service_available_action_vehicle_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/service_available_action_vehicle_spinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/service_available_action_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFEBEE"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>